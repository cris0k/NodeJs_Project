<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <main>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <% adverts.forEach(product => { %>
      <img src="<%= product.photo %>" alt="<%=product.name%>">
      <ul>
        <li><%= product.name %> </li>
        <li> 
          <% if (product.sale) { %>
          <p>On sale</p>
        <% } else { %>
          <p>Searching</p>
        <% } %>
        </li>
        <li>Price <%= product.price %> â‚¬</li>
        
      </ul>
    <% }) %>
  </main>
  </body>
</html>
